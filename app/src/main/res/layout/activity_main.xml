<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeProductos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnVisualizarProductos"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/restaurante"
            android:translationZ="10dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="110dp"
            android:translationZ="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativePerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/perfil"
            android:translationZ="10dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationZ="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeHistorial"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativePerfil">

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/historial"
            android:translationZ="10dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Historial"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationZ="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeProductos">

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/salir"
            android:translationZ="10dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="110dp"
            android:translationZ="10dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>